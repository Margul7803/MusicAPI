{# base.html.twig #}
<!DOCTYPE html>
<html lang="fr" class="h-full w-full">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script defer>
            async function callApi(endpoint, body = null) {
                const response = await fetch(`/api/${endpoint}`, {
                    method: body ? "POST" : "GET",
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: body ? body : undefined
                });
                return await response.json();
            }
        </script>

        <title>{% block title %}BeatHub{% endblock %}</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="" />
        <!-- Core theme CSS (includes Tailwind)-->
        {% block css %}{% endblock %}
        {% block callApi %}{% endblock %}
    </head>
    <body class="h-full w-full">
        <!-- Section-->
        {% block body %}{% endblock %}
        <!-- Footer-->
        <footer class="py-5 bg-gray-800 flex justify-center">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; BeatHub 2023</p></div>
        </footer>

        <!-- Core theme JS-->
        <script src="https://cdn.tailwindcss.com"></script>
    </body>
    {% block script %}{% endblock %}
</html>